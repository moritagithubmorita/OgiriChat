<div class="container-fluid">
  <div class="row">
    <div class="col-lg-10 mx-auto d-flex justify-content-center">
      <h1>お題追加</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10">
      <%= render partial: 'templates/error', locals: {model: @question_room} %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-lg-8 d-flex justify-content-center">
      <%= form_with model: @question_room, url: '/admin/question_rooms', local: true do |f| %>
        <div class="row form-group">
          <label class="col-lg-3">お題</label>
          <%= f.text_field :body, class: "col-lg-9", placeholder: '(例) こんなドラえもんは嫌だ。どんなの？' %>
        </div>
        <div class="form-group row form-inline">
          <%= f.radio_button :is_active, true, checked: true %>有効<label> </label><%= f.radio_button :is_active, false %>無効
        </div>
        <div class="row justify-content-center">
          <%= f.submit '作成する' %>
        </div>
      <% end %>
    </div>
  </div>
</div>