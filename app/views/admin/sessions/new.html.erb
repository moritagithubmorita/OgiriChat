<div class="container-fluid">
  <div class="row">
    <div class="col-lg-6">
      <div class="view-title">
        <h1 class='view-title__text'>ログイン!</h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10">
      <%= render partial: 'templates/error', locals: {model: @admin} %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10 d-flex justify-content-center">
      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
        <div class="row form-group">
          <label class="col-lg-3">email</label>
          <%= f.email_field :email, class:"col-lg-9", placeholder: "ogiri@ogiri.com" %>
        </div>
        <div class="form-group row">
          <label class="col-lg-3">パスワード</label>
          <%= f.password_field :password, class:"col-lg-4", placeholder: "パスワード" %>
        </div>
        <div class="row form-group justify-content-center">
          <%= f.submit 'ログインする！', class:"col-lg-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



