<div>
  <%= form_with model: model, url: url, id: 'new_user', class: "new_user", local: true do |f| %>
    <div class="row form-group">
      <label class="col-lg-3">名前</label>
      <%= f.text_field :name, class:"col-lg-4", placeholder: "名前"  %>
    </div>
    <div class="row form-group">
      <label class="col-lg-3">email</label>
      <%= f.email_field :email, class:"col-lg-9", placeholder: "ogiri@ogiri.com" %>
    </div>
    <div class="row form-group">
      <label class="col-lg-3">パスワード</label>
      <% if @minimum_password_length %>
        <p>(パスワードは<%= @minimum_password_length %>文字以上にしてください。)</p>
      <% end %><br />
      <%= f.password_field :password, class:"col-lg-4", placeholder: "パスワード" %>
    </div>
    <div class="row form-group">
      <label class="col-lg-3">パスワード確認</label>
      <%= f.password_field :password_confirmation, class:"col-lg-4", placeholder: "確認用です" %>
    </div>
    <div class="row justify-content-center">
      <%= f.submit submit_text, class:"col-lg-3" %>
    </div>
  <% end %>
</div>