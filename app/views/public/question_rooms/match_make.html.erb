<div class="container-fluid">
  <div class="row">
    <div class="col-lg-10">
      <h1>マッチメイク！</h1>
      <% @question_rooms.each do |qr| %>
        <label><%= qr.id %>/</label>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-lg-12 d-flex justify-content-center" id="match-make" data-user-count="<%= @users.count %>" data-question-room-ids=<%= @qr_ids %>> <%#= 3部屋分のidを「(例):qr1_id」というキーで持たせる%>
      <!-- ログインユーザよりも先に入室していたユーザがいた場合、そのユーザ情報を表示 -->
      <% if @users.count > 0 %>
        <%= render partial: 'public/question_rooms/match_make_user', locals: {user: @users.first} %>
      <% end %>
    </div>
  </div>
</div>